= form_for(@board) do |f|
  - if @board.errors.any?
    #error_explanation
      %h2= pluralize(@board.errors.count, "error") + "prohibited this board from being saved:"
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .actions
    = f.submit
